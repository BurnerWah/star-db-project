{
  "extends": [
    "@tsconfig/node20/tsconfig.json",
    "@tsconfig/strictest/tsconfig.json"
  ],
  "compilerOptions": {
    "composite": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": false,
    "noEmit": true,
    "paths": {
      "~typings/*": ["./types/*"],
      "~shared/*": ["./shared/*"]
    }
  },
  "include": ["server", "types", "shared"]
}
