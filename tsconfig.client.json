{
  "extends": [
    "@tsconfig/vite-react/tsconfig.json",
    "@tsconfig/strictest/tsconfig.json"
  ],
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "exactOptionalPropertyTypes": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~typings/*": ["./types/*"],
      "~shared/*": ["./shared/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "types", "shared"]
}
